<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="@color/edittext_green"/>
            <stroke
                android:width="@dimen/edittext_border_width"
                android:color="@color/edittext_green" />
            <corners
                android:radius="@dimen/edittext_radius" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="@color/edittext_green"/>
            <stroke
                android:width="@dimen/edittext_border_width"
                android:color="@color/edittext_green" />
            <corners
                android:radius="@dimen/edittext_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke
                android:width="@dimen/edittext_border_width"
                android:color="@color/edittext_green" />
            <corners
                android:radius="@dimen/edittext_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/edittext_offwhite"
                android:centerColor="@color/white"
                android:endColor="@color/white"
                android:angle="270"
                />
            <stroke
                android:width="@dimen/edittext_border_width"
                android:color="@color/edittext_green" />
            <corners
                android:radius="@dimen/edittext_radius" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/edittext_padding"
                android:top="@dimen/edittext_padding"
                android:right="@dimen/edittext_padding"
                android:bottom="@dimen/edittext_padding"
            />
        </shape>
    </item>
    </selector>