<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#f2f2f2"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/transactionImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pound_coin"
            android:tint="#e3ffffff" />

        <TextView
            android:id="@+id/transactionAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current account"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/transactionAccountDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactionAccountType"
            android:layout_marginBottom="15dp"
            android:text="12345678 | 12-34-56 | Tucker, Lloyd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transactionAccountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactionAccountDetails"
            android:text="Â£1500.00"
            android:textSize="35sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transactionListLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/transactionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:id="@+id/paymentButton"
            android:onClick="makePayment"/>
    </LinearLayout>
</LinearLayout>