<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:padding="@dimen/padding"
    android:background="@drawable/account_rounded_corner"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/account_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_from"
        android:layout_marginBottom="@dimen/sm_margin_vertical"
        android:textSize="@dimen/xsmall_font_size"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/account_image"
        android:contentDescription="@string/account_image_desc"
        android:layout_width="@dimen/account_image_sq_dim"
        android:layout_height="@dimen/account_image_sq_dim"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/account_image_tint" />

    <TextView
        android:id="@+id/account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_from"
        android:layout_marginBottom="@dimen/sm_margin_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/large_font_size"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/account_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_type"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:textSize="@dimen/medium_font_size"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_details"
        android:textSize="@dimen/xlarge_font_size"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"/>
</RelativeLayout>